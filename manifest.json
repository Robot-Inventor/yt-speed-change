{
    "manifest_version": 2,
    "name": "YT Speed Change",
    "short_name": "Speed Change",
    "version": "1.0.4.2",
    "description": "Save time by changing the playback speed of YouTube at well.",
    "icons": {
        "16": "image/icon16.png",
        "48": "image/icon48.png",
        "128": "image/icon128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://*.youtube.com/*"
            ],
            "js": [
                "main.js"
            ],
            "css": [
                "main.css"
            ]
        }
    ]
}